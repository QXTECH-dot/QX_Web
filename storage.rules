rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 允许任何人读取文件
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // 允许用户上传公司logo
    match /company-logos/{filename} {
      allow write: if true;
    }
    
    // 允许用户上传头像
    match /avatars/{userId}/{filename} {
      allow write: if true;
    }
    
    // 其他文件不允许写入
    match /{allPaths=**} {
      allow write: if false;
    }
  }
} 